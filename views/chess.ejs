<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/x-icon"
      href="https://img.icons8.com/fluent/512/chess-com.png"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .chessboard {
        display: grid;
        grid-template-columns: repeat(8, minmax(0, 1fr));
        grid-template-rows: repeat(8, minmax(0, 1fr));
        width: min(600px, 90vw);
        height: min(600px, 90vw);
        max-width: 600px;
        max-height: 600px;
        transform: rotate(0deg);
        border: 8px solid #2c2c2c;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.6),
                    0 0 0 2px rgba(255, 255, 255, 0.1);
        border-radius: 4px;
        overflow: hidden;
      }

      .piece.white {
        color: #f8f9fa;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.8)) 
                drop-shadow(0 0 1px rgba(0, 0, 0, 1));
        text-shadow: 
          1px 1px 2px rgba(0, 0, 0, 0.5),
          -1px -1px 2px rgba(255, 255, 255, 0.3);
      }

      .piece.black {
        color: #1a1a1a;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.5));
        text-shadow: 
          1px 1px 1px rgba(0, 0, 0, 0.8),
          -1px -1px 1px rgba(100, 100, 100, 0.3);
      }

      .flipped {
        transform: rotate(180deg);
      }

      .square {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        transition: background-color 0.2s ease;
      }

      .square.Light {
        background-color: #eeeed2;
        background: linear-gradient(135deg, #eeeed2 0%, #e8e8c8 100%);
      }

      .square.Dark {
        background-color: #769656;
        background: linear-gradient(135deg, #769656 0%, #5f7a45 100%);
      }

      .square.selected {
        background-color: #f59e0b !important;
        box-shadow: inset 0 0 0 3px #fbbf24;
      }

      .square.valid-move::after {
        content: '';
        position: absolute;
        width: 30%;
        height: 30%;
        background-color: rgba(34, 197, 94, 0.6);
        border-radius: 50%;
        pointer-events: none;
      }

      .square.valid-move.has-piece::after {
        width: 90%;
        height: 90%;
        background-color: transparent;
        border: 4px solid rgba(239, 68, 68, 0.7);
        border-radius: 50%;
      }

      .piece {
        font-size: clamp(32px, 6vw, 56px);
        cursor: pointer;
        user-select: none;
        transition: all 0.15s ease;
        font-weight: 400;
        line-height: 1;
      }

      .piece:hover {
        transform: scale(1.15);
        filter: brightness(1.2);
      }

      .piece:active {
        transform: scale(1.05);
      }

      /* Touch-friendly styles for mobile */
      @media (hover: none) and (pointer: coarse) {
        .piece:hover {
          transform: scale(1);
          filter: none;
        }
        
        .piece:active {
          transform: scale(0.95);
          filter: brightness(1.1);
        }
        
        .square {
          -webkit-tap-highlight-color: transparent;
        }
      }

      /* Rotate pieces for black player */
      .flipped .piece {
        transform: rotate(180deg);
      }

      .player-name {
        min-width: 200px;
        text-align: center;
      }

      .waiting-overlay {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.9);
        padding: 2rem 3rem;
        border-radius: 12px;
        border: 2px solid #4ade80;
        z-index: 1000;
        animation: pulse 2s ease-in-out infinite;
      }

      @keyframes pulse {
        0%, 100% {
          opacity: 1;
          transform: translate(-50%, -50%) scale(1);
        }
        50% {
          opacity: 0.8;
          transform: translate(-50%, -50%) scale(1.02);
        }
      }

      #spectatorCounter {
        animation: slideInRight 0.3s ease-out;
      }

      @keyframes slideInRight {
        from {
          opacity: 0;
          transform: translateX(20px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      /* Mobile Responsive Styles */
      @media (max-width: 768px) {
        .chessboard {
          width: 95vw;
          height: 95vw;
          border: 4px solid #2c2c2c;
        }
        
        .piece {
          font-size: clamp(28px, 8vw, 48px);
        }
        
        .player-name {
          min-width: 150px;
          padding: 0.5rem 1rem;
        }
        
        .player-name p {
          font-size: 0.9rem;
        }
        
        .waiting-overlay {
          padding: 1.5rem 2rem;
          max-width: 90vw;
        }
        
        .waiting-overlay p {
          font-size: 1.25rem;
        }
        
        .game-over-modal {
          padding: 2rem;
          min-width: 280px;
          max-width: 90vw;
        }
        
        .game-over-modal h2 {
          font-size: 1.75rem;
        }
        
        .game-over-modal p {
          font-size: 1rem;
        }
        
        #spectatorCounter {
          padding: 0.5rem 0.75rem;
          font-size: 0.875rem;
        }
        
        #spectatorCounter svg {
          width: 1rem;
          height: 1rem;
        }
      }

      @media (max-width: 480px) {
        .chessboard {
          width: 98vw;
          height: 98vw;
          border: 3px solid #2c2c2c;
        }
        
        .piece {
          font-size: clamp(24px, 9vw, 40px);
        }
        
        .player-name {
          min-width: 120px;
          padding: 0.4rem 0.8rem;
        }
        
        .player-name p {
          font-size: 0.8rem;
        }
        
        .waiting-overlay {
          padding: 1rem 1.5rem;
        }
        
        .waiting-overlay p {
          font-size: 1rem;
        }
        
        .waiting-overlay svg {
          width: 2.5rem;
          height: 2.5rem;
        }
        
        .game-over-modal {
          padding: 1.5rem;
          min-width: 250px;
        }
        
        .game-over-modal h2 {
          font-size: 1.5rem;
        }
        
        .game-over-modal .trophy-icon {
          font-size: 3rem;
        }
        
        .game-over-modal button {
          padding: 0.6rem 1.5rem;
          font-size: 0.9rem;
        }
        
        .top-6 {
          top: 0.75rem;
        }
        
        .right-6 {
          right: 0.75rem;
        }
        
        #spectatorCounter {
          padding: 0.4rem 0.6rem;
        }
        
        #spectatorCounter .text-sm {
          display: none;
        }
      }

      @media (max-width: 360px) {
        .chessboard {
          width: 100vw;
          height: 100vw;
          border: 2px solid #2c2c2c;
          border-radius: 0;
        }
        
        .piece {
          font-size: clamp(20px, 10vw, 36px);
        }
        
        .player-name {
          font-size: 0.75rem;
        }
      }
    </style>

    <title>Document</title>
  </head>

  <body>
    <div
      class="h-screen w-full flex items-center relative justify-center bg-zinc-950"
    >
      <div class="w-full h-screen">
        <img
          class="w-full - h-screen object-cover opacity-30"
          src="https://imgs.search.brave.com/VwpNWEhqRK3o28UJjISUFVC5Y1FmuXtbkJXNomRwNNw/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9pLnBp/bmltZy5jb20vb3Jp/Z2luYWxzLzgwLzg4/L2JhLzgwODhiYThk/Mjc2YmQ5ZmE1NGU4/ODI0MjNkODE0ZDVl/LmpwZw"
          alt=""
        />
      </div>
      <div class="top-6 right-6 absolute flex flex-col items-end gap-3">
        <!-- Spectator Counter -->
        <div id="spectatorCounter" class="bg-zinc-800 bg-opacity-90 px-4 py-2 rounded-lg border border-purple-500 flex items-center gap-2" style="display: none;">
          <svg class="w-5 h-5 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-white font-semibold" id="spectatorCount">0</span>
          <span class="text-purple-300 text-sm">watching</span>
        </div>
        
        <!-- Logout -->
        <p class="text-xl text-white text-center">
          <a href="#" onclick="logout()">Log Out</a>
        </p>
      </div>

      <!-- Waiting notification -->
      <div id="waitingNotification" class="waiting-overlay" style="display: none;">
        <div class="flex flex-col items-center gap-4">
          <svg class="animate-spin h-12 w-12 text-green-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <p class="text-white text-2xl font-semibold">Waiting for someone to join the room...</p>
        </div>
      </div>

      <!-- Game Over Modal -->
      <div id="gameOverBackdrop" class="game-over-backdrop" style="display: none;"></div>
      <div id="gameOverModal" class="game-over-modal" style="display: none;">
        <div class="trophy-icon" id="gameOverIcon">üèÜ</div>
        <h2 class="text-3xl font-bold text-white mb-4" id="gameOverTitle">Game Over</h2>
        <p class="text-xl text-gray-300 mb-6" id="gameOverMessage">Checkmate!</p>
        <button 
          onclick="location.reload()" 
          class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200 shadow-lg">
          Play Again
        </button>
      </div>

      <!-- Player names and chessboard container -->
      <div class="absolute flex flex-col items-center gap-4">
        <!-- Top player (opponent) -->
        <div id="topPlayerName" class="player-name bg-zinc-800 bg-opacity-80 px-6 py-3 rounded-lg border-2 border-zinc-600">
          <p class="text-white text-lg font-semibold">Waiting...</p>
        </div>

        <!-- Chessboard -->
        <div
          class="chessboard shadow-zinc-700 shadow-xl w-[40vh] h-[40vh] lg:w-[75vh] lg:h-[75vh]"
        ></div>

        <!-- Bottom player (you) -->
        <div id="bottomPlayerName" class="player-name bg-zinc-800 bg-opacity-80 px-6 py-3 rounded-lg border-2 border-green-500">
          <p class="text-white text-lg font-semibold">You</p>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.socket.io/4.8.1/socket.io.min.js"
      integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"
      integrity="sha512-xRllwz2gdZciIB+AkEbeq+gVhX8VB8XsfqeFbUh+SzHlN96dEduwtTuVuc2u9EROlmW9+yhRlxjif66ORpsgVA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/js/chessGame.js"></script>
    <script>
      async function logout() {
        try {
          const res = await fetch("/auth/logout", {
            method: "POST",
            credentials: "include", // ye zaroori hai taaki cookie clear ho
          });
          const data = await res.json();
          if (data.ok) {
            window.location.href = "/login"; // redirect after logout
          }
        } catch (err) {
          console.error(err);
        }
      }
    </script>
  </body>
</html>
